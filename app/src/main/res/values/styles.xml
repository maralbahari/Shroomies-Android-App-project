<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LogoYellow</item>
        <item name="colorPrimaryDark">@color/LogoYellow</item>
        <item name="colorAccent">@color/Timeberwolf</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="PostPublishedAnimation">
        <item name="android:windowEnterAnimation">@anim/post_published_slide_down</item>
        <item name="android:windowExitAnimation">@anim/post_published_slide_up</item>
    </style>

</resources>