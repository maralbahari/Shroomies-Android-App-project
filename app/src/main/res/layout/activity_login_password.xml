<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".LoginPassword"
    tools:deviceIds="wear">

    <TextView
        android:id="@+id/login_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif-black"
        android:text="@string/login"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textStyle="bold" />

  <ImageView
      android:id="@+id/black_shroomies_logo"
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:alpha="1.0"
      android:foregroundGravity="center"
      android:src="@drawable/new_shroomies_black"
      android:layout_below="@id/login_textview"
      android:layout_marginTop="20dp"
      android:layout_centerHorizontal="true"
      tools:layout_editor_absoluteY="44dp"
      android:contentDescription="@string/app_logo" />



  <TextView
      android:id="@+id/email_textview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:text="@string/email"
      android:layout_marginTop="30dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:elevation="30dp"
      android:textSize="18sp"
      android:textAlignment="center"
      android:padding="20dp"
      android:background="@drawable/textbox_rectangle"
      android:layout_below="@+id/black_shroomies_logo"/>

    <TextView
        android:id="@+id/enter_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.9"
        android:layout_centerHorizontal="true"
        android:text="@string/enter_your_password"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@+id/email_textview"/>


    <EditText
        android:id="@+id/password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/textbox_rectangle"
        android:drawableStart="@drawable/ic_password_edit_text"
        android:elevation="30dp"
        android:hint="    Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_below="@+id/enter_password_login"
        android:layout_centerHorizontal="true"
        />



    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_bg_bordered"
        android:fontFamily="@font/montserrat_bold"
        android:padding="10dp"
        android:elevation="30dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/LogoYellow"
        android:textSize="25sp"
     />


    <TextView
        android:id="@+id/forgot_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:alpha="0.9"
        android:layout_centerHorizontal="true"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        />

