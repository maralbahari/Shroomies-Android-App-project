<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapsFragment"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="50dp">
   <fragment
       android:id="@+id/map"
       android:name="com.google.android.gms.maps.SupportMapFragment"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

   </fragment>
    <SearchView
        android:id="@+id/search_view_map_fragment"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:queryBackground="@android:color/transparent"
        android:queryHint="Search..."
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@drawable/search_light_green_background"
        android:layout_centerHorizontal="true"
        >


    </SearchView>


    <ListView

        android:id="@+id/list_view_map_fragment"
        android:layout_marginTop="-15dp"
        android:paddingTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/address_list_background"
        android:layout_below="@id/search_view_map_fragment"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_above="@id/update_location_button"
        android:visibility="gone"
       />


    <Button
        android:id="@+id/update_location_button"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="Update location"
        android:textAllCaps="false"
         android:textColor="@color/jetBlack"
        android:fontFamily="@font/amiko"
        android:background="@drawable/search_light_green_background">

    </Button>





</RelativeLayout>