<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:background="@drawable/post_card_rectangle_round"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_margin="10dp">

        <ImageView
            android:padding="5dp"
            android:id="@+id/suggestion_list_image"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_user_profile_svgrepo_com" />

        <TextView
            android:id="@+id/suggestion_list_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:layout_toEndOf="@id/suggestion_list_image"
            android:text=" Username"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/add_user_to_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/suggestion_list_username"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_purple_circle_30dp"
            android:elevation="5dp"
            android:padding="10dp"
            tools:srcCompat="@drawable/ic_person_add_24" />

        <ImageButton
            android:id="@+id/remove_user_from_group_chat_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/suggestion_list_username"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_white_button_small"
            android:elevation="2dp"
            android:padding="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_icon_material_remove_circle_outline" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>