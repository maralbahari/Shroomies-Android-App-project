<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="0dp"
    android:orientation="vertical">

    <RelativeLayout

        android:background="@drawable/post_card_rectangle_round"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="20dp"
        android:layout_margin="5dp">


        <ImageView

            android:id="@+id/suggestion_list_image"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:padding="10dp"
            android:layout_alignParentStart="true"
           android:layout_margin="5dp"
            app:srcCompat="@drawable/ic_user_profile_small"
            android:background="@drawable/edit_text_bg"
            android:elevation="3dp"
            />

        <TextView
            android:id="@+id/suggestion_list_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"

            android:layout_toEndOf="@id/suggestion_list_image"
            android:text=" Username"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:textStyle="bold" />


        <CheckBox
            android:id="@+id/add_user_to_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/suggestion_list_username"
            android:layout_alignParentRight="true"
            android:background="@drawable/add_user_check_button"
            android:elevation="2dp"
            android:checked="false"
            android:drawablePadding="5dp"
            android:button="@android:color/transparent"
            android:foreground="@drawable/ic_icon_awesome_check"
            android:foregroundGravity="center"

            />

        <ImageButton
            android:id="@+id/remove_user_from_group_chat_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_below="@id/suggestion_list_username"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_text_bg"
            android:elevation="1dp"
           android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/remove_con_large" />

    </RelativeLayout>

</LinearLayout>