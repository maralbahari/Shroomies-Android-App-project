<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="60dp"

    android:paddingBottom="60dp"
    tools:context=".PublishPost">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFF"
                android:drawableStart="@drawable/ic_pen_icon_edit"
                android:padding="10dp"
                android:text="create new post"

                android:textAlignment="textStart"
                android:textSize="17sp">

            </Button>





            <com.google.android.material.tabs.TabLayout

                android:id="@+id/tab_layout_publish_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabBackground="@drawable/tab_backgorund_style"
                >

                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_button_apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="apartment"
                    />


                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_button_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="personal"
                  />


            </com.google.android.material.tabs.TabLayout>




            <RelativeLayout
                android:id="@+id/upload_image_card"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"

                android:background="@drawable/post_card_rectangle_round"
                android:elevation="3dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/upload_image_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_margin="20dp"
                    android:text="upload images"
                    android:textSize="18sp">

                </androidx.appcompat.widget.AppCompatTextView>

                <ImageView
                    android:id="@+id/cloud_icon_publish_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_upload_icon_cloud">

                </ImageView>
                <TextView
                    android:id="@+id/number_of_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_toLeftOf="@id/image_icon_post"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="2dp"/>
                <ImageView
                    android:id="@+id/image_icon_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_icon_awesome_image"
                 android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"


                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"

                    >

                </ImageView>
            </RelativeLayout>






            <RelativeLayout
                android:id="@+id/description_post"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:background="@drawable/post_card_rectangle_round"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"

                    android:text="Description:"></TextView>

                <EditText
                    android:id="@+id/description_edit_text"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/description_tv"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp">

                </EditText>
            </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/number_of_roommates"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"

                android:background="@drawable/post_card_rectangle_round"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/number_of_roommates_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"

                    android:text="No.roommates:">

                </TextView>

                <NumberPicker
                    android:id="@+id/roommate_number_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/number_of_roommates_tv"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp">

                </NumberPicker>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/budget_layout"

                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:layout_weight="1"


                android:background="@drawable/post_card_rectangle_round"
                android:elevation="3dp">

                <TextView
                    android:id="@+id/budget_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"

                    android:text="Budget:">

                </TextView>

                <NumberPicker
                    android:id="@+id/budget_number_picker"
                    android:layout_width="66dp"
                    android:layout_height="73dp"
                    android:layout_below="@id/budget_tv"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp">

                </NumberPicker>

            </RelativeLayout>
        </LinearLayout>



            <TextView

                android:id="@+id/location_search_view"
                android:gravity="fill_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/location_search_bar"

                android:elevation="5dp"
                android:padding="10dp"
                app:drawableEndCompat="@drawable/ic_icon_feather_map">

            </TextView>



            <com.example.shroomies.CustomMapView
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="10dp"
                android:id="@+id/address_map_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                >


            </com.example.shroomies.CustomMapView>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/post_card_rectangle_round"
                android:elevation="3dp"
                >

                <TextView
                    android:id="@+id/add_property"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:text="Add properties" />



    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
        android:layout_below="@id/add_property">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/female_button_post"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:elevation="3dp"
                        android:background="@drawable/button_round"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/ic_icon_ionic_ios_female"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/male_button_post"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:elevation="3dp"
                        android:background="@drawable/button_round"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/ic_icon_ionic_ios_male"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/pet_button_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:elevation="3dp"
                        android:background="@drawable/button_round"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/ic_icon_map_pet_store"
                           />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/non_smoking_button_post"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:elevation="3dp"
                        android:background="@drawable/button_round"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:background="@drawable/ic_icon_material_smoke_free"
                            />
                </LinearLayout>
                </LinearLayout>



            </RelativeLayout>



        <LinearLayout
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:elevation="3dp"
            android:background="@drawable/button_circle_yellow">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/ic_icon_material_publish"/>
        </LinearLayout>



    </LinearLayout>


</androidx.core.widget.NestedScrollView>