    <HorizontalScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:chipSpacingVertical="3dp"
        app:singleLine="true"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        >
        <com.google.android.material.chip.Chip
            android:id="@+id/apartment_post_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I want to share my place with someone"
            android:padding="0dp"
            android:checkable="true"
            android:checked="true"
            app:chipBackgroundColor="@color/LogoYellow"
            android:elevation="3dp"
            app:checkedIcon="@drawable/ic_check"
            app:chipStrokeColor="@color/LogoYellow"
            android:textColor="@color/jetBlack"
            android:textSize="12sp"
            app:chipStrokeWidth="1dp"
            app:checkedIconTint="@color/jetBlack"

            />
        <com.google.android.material.chip.Chip
            android:id="@+id/personal_post_chip"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm looking to join someone else's place"
            android:textSize="12sp"
            android:checkable="true"
            app:chipBackgroundColor="@color/white"
            android:elevation="3dp"
            app:checkedIcon="@drawable/ic_check"
            app:chipStrokeColor="@color/LogoYellow"
            android:textColor="@color/jetBlack"
            app:checkedIconTint="@color/jetBlack"
            app:chipStrokeWidth="1dp"/>

    </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>



