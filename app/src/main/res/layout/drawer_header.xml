<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:backgroundTintMode="src_over">

            <ImageView
                android:id="@+id/drawer_nav_profile_pic"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_white_button_small"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:elevation="3dp"
                android:src="@drawable/ic_user_profile_svgrepo_com"
               />

    <TextView
        android:id="@+id/drawer_nav_profile_name"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Profile Name"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/jetBlack"
        android:fontFamily="@font/amiko"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawer_nav_profile_pic"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>