<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeleteUser">
    <RelativeLayout
        android:id="@+id/delete_account_upper_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LogoYellow">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_account_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Delete Account"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:textStyle="bold"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/delete_account_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_alignParentRight="true"
            android:textColor="@color/lightGrey"
            android:textAllCaps="false"
            android:background="@android:color/transparent"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/delete_account_exp"
        android:layout_below="@+id/delete_account_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:text="Please Enter the password belongs to this email."
        android:textColor="@color/LogoYellow"
        android:layout_margin="10dp"
        android:elevation="-5dp"
        android:padding="-5dp"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/delete_account_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:inputType="textEmailAddress"
        android:layout_below="@id/delete_account_upper_page"
        android:layout_margin="10dp"
        />
    <View
        android:id="@+id/line_below_image"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/delete_account_email"
        android:layout_margin="5dp"
        android:alpha="0.8"
        android:background="@color/lowerGradientColorForLoginBackground"/>

    <EditText
        android:id="@+id/delete_account_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete_account_email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:drawableRight="@drawable/ic_close_logo_color"
        android:hint="Password"
        android:inputType="textPassword"
        android:drawablePadding="5dp"
        android:focusedByDefault="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/delete_account_password"
        android:layout_margin="5dp"
        android:alpha="0.8"
        android:background="@color/lowerGradientColorForLoginBackground"/>
</RelativeLayout>