<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:elevation="3dp"
    android:background="@drawable/card_background_on_press"
    android:layout_marginTop="0.2dp"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/user_image_search_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/circle_white_button"
        android:elevation="3dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:padding="10dp"
        android:src="@drawable/ic_user_profile_small" />
    <TextView
        android:id="@+id/user_name_search_card"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_image_search_card"
        android:elevation="5dp"
        android:padding="5dp"
        android:fontFamily="@font/amiko"
        android:layout_marginTop="5dp"
        android:textColor="@color/jetBlack"
        />
    <TextView
        android:id="@+id/user_bio_search_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_image_search_card"
        android:layout_below="@id/user_name_search_card"

        android:paddingLeft="5dp"
        />

</RelativeLayout>