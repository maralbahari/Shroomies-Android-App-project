<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shroomie_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/my_shroomie_expenses_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Alabaster"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/importance_view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/okGreen" />

            <TextView
                android:id="@+id/title_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:text="ELECTRIC BILL"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/card_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title_card"
                android:elevation="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/imagepdf" />

            <TextView
                android:id="@+id/shroomie_attachment_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/title_card"
                android:text="Attachment"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/dueDate_card"
                android:layout_width="101dp"
                android:layout_height="19dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/shroomie_attachment_tv"
                android:background="@drawable/textbox_round"
                android:elevation="5dp"
                android:text="Due"
                android:textAlignment="center"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/shroomie_mention"
                android:layout_width="52dp"
                android:layout_height="20dp"
                android:layout_below="@+id/card_img"
                android:layout_alignParentRight="true"
                android:layout_marginRight="140dp"
                android:background="@drawable/mentions"
                android:scaleType="centerCrop"
                android:text="Mention" />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_card"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="we haven't paid the past two months and the landlord is asking to pay asap please pay soon" />

            <CheckBox
                android:id="@+id/shroomie_checkbox"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/card_description"
                android:layout_margin="20dp" />

            <TextView
                android:id="@+id/shroomie_markasdone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_description"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/shroomie_checkbox"
                android:text="Mark as done"
                android:textSize="10sp" />

            <ImageButton
                android:id="@+id/archive_card_btn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@+id/card_img"
                android:layout_margin="20dp"
                android:src="@drawable/ic_archive" />

            <ImageButton
                android:id="@+id/delete_card_btn"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_below="@id/shroomie_checkbox"
                android:layout_marginTop="29dp"
                android:layout_toRightOf="@+id/archive_card_btn"
                android:src="@drawable/ic_delete" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>