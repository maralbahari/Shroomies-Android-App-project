<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shroomie_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
  >

    <androidx.cardview.widget.CardView
        android:id="@+id/my_shroomie_expenses_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="4dp">
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/importance_view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/okGreen"
                />

            <TextView
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clean basment"
                android:layout_toLeftOf="@+id/dueDate_card"
                android:id="@+id/title_card"
                android:textSize="25sp"
                android:layout_marginRight="60dp"
                android:lines="1"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="10dp"
                />

            <CheckBox
                android:id="@+id/expense_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_description"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_above="@id/archive_card_btn"
                android:buttonTint="@color/okGreen"
                />

            <TextView
                android:id="@+id/shroomie_markasdone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as done"
                android:layout_below="@+id/card_description"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/expense_done"
                android:textSize="12sp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                />

            <TextView
                android:id="@+id/card_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_card"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/card_img"
                android:text="the mechanic  is +1232313123 please contact him asap!" />

            <ImageView
                android:id="@+id/card_img"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/title_card"
                android:elevation="2dp"
                android:src="@drawable/imagepdf" />

            <ImageButton
                android:id="@+id/archive_card_btn"
                android:src="@drawable/ic_archive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_img"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:elevation="10dp"
                android:background="@android:color/transparent"


                />

            <ImageButton
                android:id="@+id/delete_card_btn"
                android:src="@drawable/ic_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_img"
                android:layout_toRightOf="@id/archive_card_btn"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:elevation="10dp"
                android:background="@android:color/transparent"
                />

            <TextView
                android:id="@+id/dueDate_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/mention_text_box"
                android:elevation="3dp"
                android:gravity="center"
                android:inputType="date"
                android:text="Due date"
                android:padding="5dp"
                android:textSize="10sp" />


            <com.hendraanggrian.widget.SocialTextView
                android:id="@+id/expenses_mention_et"
                android:background="@drawable/mention_text_box"
                android:elevation="5dp"
                android:layout_width="wrap_content"
                android:maxWidth="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:textSize="10sp"
                android:layout_below="@id/card_img"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>