<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.5dp"
    >

    <ImageView
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_alignParentTop="true"
        android:id="@+id/apartment_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"/>


    <LinearLayout
        android:layout_alignParentStart="true"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:background="@drawable/post_icon_background"
        android:backgroundTint="#4DE3E3E3">


        <ImageView
            android:id="@+id/male_image_view_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:elevation="3dp"
            android:src="@drawable/male_icon_15dp"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/female_image_view_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:elevation="3dp"
            android:src="@drawable/female_icon_15dp"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/pets_allowd_image_view_apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:elevation="3dp"
            android:src="@drawable/pet_icon_15dp"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/non_smoking_image_view_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:elevation="3dp"
            android:visibility="visible"
            android:src="@drawable/smoking_icon_15dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/city_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="city"
        android:layout_alignParentLeft="true"
        android:shadowRadius="10"
        android:shadowColor="@color/jetBlack"
        android:layout_alignBottom="@+id/apartment_image"
        android:layout_toStartOf="@id/favorite_check_box"
        android:layout_margin="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:lines="1" />

    <CheckBox
        android:id="@+id/favorite_check_box"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@id/apartment_image"
        android:background="@drawable/start_check_button"
        android:button="@null"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/price_text_view_apartment_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="price"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:shadowRadius="10"
        android:shadowColor="@color/jetBlack"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_margin="2dp"
        />


</RelativeLayout>