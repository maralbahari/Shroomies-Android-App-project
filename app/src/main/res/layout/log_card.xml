<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:padding="5dp"
    app:cardElevation="0dp"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:elevation="3dp"
                android:src="@drawable/ic_user_profile_svgrepo_com"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:id="@+id/log_actor_pic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <TextView

                android:id="@+id/log_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:textColor="@color/Black"
                android:layout_toRightOf="@+id/log_actor_pic"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/amiko"
                android:layout_toLeftOf="@id/log_date"
                />
            <TextView
                android:id="@+id/log_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="1days"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/amiko"
                />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@id/log_actor_pic"
        android:background="#BDBDBD"
        android:layout_alignStart="@id/log_message"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

        </RelativeLayout>
</androidx.cardview.widget.CardView>

