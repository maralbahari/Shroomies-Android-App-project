<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindRoommate"
    android:layout_marginTop="55dp"
    android:layout_marginBottom="50dp"
    android:background="@drawable/background_discover"
    >
    <TextView
        android:id="@+id/TWh1_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/assistant_bold"
        android:text="@string/Heading_discover"
        android:textColor="#000000"
        android:textSize="50sp" />
    <TextView
        android:id="@+id/TWh2_disc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TWh1_dis"
        android:layout_marginLeft="45dp"
        android:fontFamily="@font/assistant_semibold"
        android:text="Your shroomies today!"
        android:textColor="#000000"
        android:textSize="30sp"/>
    <SearchView
        android:id="@+id/SVsearch_disc"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="Search.."
        android:layout_below="@id/TWh2_disc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:elevation="3dp"
        android:background="@drawable/search_border"/>

</RelativeLayout>