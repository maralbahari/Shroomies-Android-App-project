<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_with_border">
           <ImageView
               android:id="@+id/request_user_photo"
               android:layout_width="50dp"
               android:layout_height="50dp"
                android:layout_margin="10dp"
               android:src="@drawable/ic_user_profile_svgrepo_com"
                />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/cancel_request"
        android:layout_toEndOf="@+id/request_user_photo"
        android:lines="1"
        android:text="Name"
        android:ellipsize="end"
        android:textColor="@color/Black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/requested_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/request_user_photo"
        android:layout_toStartOf="@+id/cancel_request"
        android:ellipsize="end"
        android:lines="1"
        android:text="text" />

           <ImageButton
               android:id="@+id/accept_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_gravity="center"
               android:background="@drawable/accept_background_button"
               android:visibility="visible"
               android:layout_marginRight="10dp"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp" />
           <ImageButton
               android:padding="5dp"
               android:layout_gravity="center"
               android:id="@+id/decline_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:background="@drawable/reject_background_button"
               android:layout_toLeftOf="@+id/accept_button"
               android:layout_marginLeft="5dp"
               />

    <Button
        android:id="@+id/cancel_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/lightGrey"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="visible" />

    </RelativeLayout>

