<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    android:layout_margin="5dp"
    >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/request_user_photo"
               android:layout_width="70dp"
               android:layout_height="70dp"
                android:layout_margin="20dp"
               android:src="@drawable/ic_user_profile_small"
                />

           <TextView
               android:id="@+id/user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:textColor="@color/Black"
               android:textStyle="bold"
               android:layout_marginTop="30dp"
               android:lines="1"
               android:layout_toRightOf="@+id/request_user_photo"
               />
           <TextView
               android:id="@+id/requested_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@id/request_user_photo"
               android:layout_marginTop="5dp"
               android:layout_toRightOf="@+id/request_user_photo"
               />



               <com.google.android.material.button.MaterialButton
                   android:layout_gravity="center"
                   android:id="@+id/accept_button"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Accept"
                   android:textStyle="bold"
                   android:textColor="@color/jetBlack"
                   android:layout_margin="0dp"
                   android:insetTop="0dp"
                   android:insetBottom="0dp"
                   app:cornerRadius="0dp"
                   android:layout_below="@id/decline_btn"
                   android:visibility="visible"/>

               <com.google.android.material.button.MaterialButton
                   android:layout_marginBottom="1dp"
                   android:padding="2dp"
                   android:layout_gravity="center"
                   android:id="@+id/decline_btn"
                   android:insetBottom="0dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="decline"
                   android:layout_below="@id/requested_tv"
                   app:elevation="3dp"
                   android:textColor="@color/jetBlack"
                   android:backgroundTint="@color/veryLightGrey"
                   app:cornerRadius="0dp"
                   android:layout_marginTop="30dp"
                   android:visibility="visible"

                   />

           <com.google.android.material.button.MaterialButton
               android:id="@+id/cancel_request"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:insetBottom="0dp"
               android:text="Cancel request"
               android:textColor="@color/jetBlack"
               android:layout_below="@+id/requested_tv"
               app:cornerRadius="0dp"
               android:backgroundTint="@color/veryLightGrey"
               android:textStyle="bold"
               android:visibility="gone"
               />

       </RelativeLayout>

    </androidx.cardview.widget.CardView>

