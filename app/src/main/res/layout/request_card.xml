<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_with_border">
           <ImageView
               android:id="@+id/request_user_photo"
               android:layout_width="50dp"
               android:layout_height="50dp"
                android:layout_margin="10dp"
               android:src="@drawable/ic_user_profile_svgrepo_com"
                />
           <TextView
               android:id="@+id/user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="15sp"
               android:textColor="@color/Black"
               android:textStyle="bold"
               android:layout_marginTop="10dp"
               android:lines="1"
               android:maxLength="30"
               android:minWidth="200dp"
               android:text="Name"
               android:layout_toRightOf="@+id/request_user_photo"
               />
           <TextView
               android:id="@+id/requested_tv"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_toRightOf="@+id/request_user_photo"
               android:text="text"
               android:minWidth="150dp"
               android:layout_below="@+id/user_name"
               android:lines="1"
               />

           <ImageButton
               android:id="@+id/accept_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_gravity="center"
               android:background="@drawable/accept_background_button"
               android:visibility="visible"
               android:layout_marginRight="10dp"
               android:layout_centerVertical="true"
               android:layout_marginLeft="10dp" />
           <ImageButton
               android:padding="5dp"
               android:layout_gravity="center"
               android:id="@+id/decline_btn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:background="@drawable/ic_cancel_filled"
               android:layout_toLeftOf="@+id/accept_button"
               android:layout_marginLeft="5dp"
               />
           <com.google.android.material.button.MaterialButton
               android:id="@+id/cancel_request"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cancel"
               android:textColor="@color/white"
               android:textAllCaps="false"
               android:layout_alignParentEnd="true"
               android:layout_centerVertical="true"
               android:layout_margin="10dp"
               android:layout_toEndOf="@+id/user_name"
               android:backgroundTint="@color/veryLightGrey"
               android:visibility="gone"
               />

    </RelativeLayout>

