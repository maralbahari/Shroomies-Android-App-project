<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeUsernameDialog">
    <RelativeLayout
        android:id="@+id/change_username_upper_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LogoYellow">
        <ImageButton
            android:id="@+id/change_username_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Edit Username"
            android:layout_margin="10dp"
            android:textColor="@color/jetBlack"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_username_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:text="Done"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textStyle="bold"/>
    </RelativeLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enter_new_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_username_upper_page"
        android:layout_marginTop="10dp"
        app:boxBackgroundMode="filled"
        app:boxStrokeColor="@color/LogoYellow"
        app:boxStrokeWidth="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:errorEnabled="true"
        app:hintAnimationEnabled="true"
        app:hintEnabled="false"
        app:hintTextColor="@color/jetBlack"
        android:paddingBottom="10dp"
        app:counterMaxLength="20"
        app:textColor="@color/jetBlack"
        app:endIconDrawable="@drawable/ic_information"
        app:endIconMode="custom"
        app:counterEnabled="true"
        app:counterTextColor="@color/LogoYellow"
        app:startIconTint="@color/lowerGradientColorForLoginBackground"
        app:endIconTint="@color/lowerGradientColorForLoginBackground"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:hint="Username"
            android:inputType="text"
            android:maxLength="20"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textAlignment="textStart"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/help_card_view_edit_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enter_new_username"
        android:layout_marginTop="-15dp"
        android:layout_alignEnd="@+id/enter_new_username"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/white"
        android:layout_marginEnd="10dp"
        app:cardElevation="5dp"
        android:alpha="0.6"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/help_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textStyle="bold"
            android:text="The username must be:\n-No longer than 20 characters.\n-Must not contain any spacing"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>