<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/textbox_round"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp">

      <RelativeLayout
          android:layout_margin="10dp"
          android:elevation="5dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">

          <ImageView
              android:elevation="5dp"
              android:src="@drawable/ic_user_profile_svgrepo_com"
              android:layout_margin="20dp"
              android:id="@+id/member_photo"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:padding="10dp"
              android:background="@drawable/circle_white_button"
              />

          <TextView

              android:layout_marginTop="35dp"
              android:id="@+id/member_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Name"
              android:layout_toRightOf="@+id/member_photo"
              />

        <ImageButton
            android:id="@+id/msg_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/ic_message"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="85dp"
            />

          <ImageButton
              android:id="@+id/remove_member"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/ic_remove"
              android:background="@color/white"
              android:layout_alignParentRight="true"
              android:layout_marginTop="35dp"
              android:layout_marginRight="30dp"
              />

      </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>