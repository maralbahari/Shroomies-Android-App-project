<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/add_shroomies"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/add_member_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add members"
            android:layout_below="@+id/search_member"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_member_recyclerview"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_member_tv"
            />

        <Button
            android:id="@+id/back_to_shroomie"
            android:background="@drawable/back_to_shroomie"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/add_member_recyclerview"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>


</LinearLayout>