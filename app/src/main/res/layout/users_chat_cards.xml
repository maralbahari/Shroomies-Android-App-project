<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/receiver_box_card_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/receiver_message_background"
        android:orientation="vertical"
        android:elevation="3dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/receiver_box_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="receiver message"
            android:textColor="@color/jetBlack"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/reciever_box_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14-20"
            android:textColor="@color/lightGrey"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_gravity="right"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/receiver_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/receiver_message_background"
        android:padding="15dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_icon_awesome_image"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/sender_box_card_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/sender_background_message"
        android:orientation="vertical"
        android:elevation="3dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/sender_box_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="sender message"
            android:textColor="@color/jetBlack"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/sender_box_card_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14-20"
            android:textColor="@color/lightGrey"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_gravity="right"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/sender_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/sender_background_message"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_icon_awesome_image"
        android:visibility="gone"
        />




</RelativeLayout>