<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/receiver_box_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/receiver_message_background"
        android:text="receiver message"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/receiver_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/receiver_message_background"
        android:padding="15dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_icon_awesome_image"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/sender_box_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="50dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/sender_background_message"
        android:text="sender message"
        android:textColor="@android:color/black"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/sender_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/sender_background_message"
        android:padding="15dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        tools:srcCompat="@drawable/ic_icon_awesome_image"
        android:visibility="gone"
        />

</RelativeLayout>