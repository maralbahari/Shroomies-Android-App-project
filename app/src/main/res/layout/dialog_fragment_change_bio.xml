<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ChangeEmailDialog">
    <RelativeLayout
        android:id="@+id/change_bio_upper_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LogoYellow">

        <ImageButton
            android:id="@+id/change_bio_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_back_"/>
        <TextView
            android:id="@+id/text_current_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bio"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/Black"
            android:textSize="18sp"
            android:textStyle="bold"  />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/change_bio_done_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Done"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold">
        </com.google.android.material.button.MaterialButton>
    </RelativeLayout>

    <EditText
        android:id="@+id/enter_new_bio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_bio_upper_page"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/ic_close_light_grey"
        android:drawablePadding="5dp"
        android:focusable="true"
        android:inputType="text|textImeMultiLine"
        android:lines="5"
        android:maxLength="100"
        android:hint="my bio"
        android:textSize="13sp"></EditText>
    <View
        android:layout_below="@+id/enter_new_bio"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.6"
        android:background="@color/lowerGradientColorForLoginBackground"/>
    <TextView
        android:id="@+id/bio_char_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/lightGrey"
        android:textSize="15sp"
        android:text="100"/>
</RelativeLayout>