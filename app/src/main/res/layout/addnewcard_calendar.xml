<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/add_new_card_calendar">

    <TextView
        android:id="@+id/pick_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Due Date"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />
    <EditText
        android:id="@+id/due_date_chosen"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pick_due_date"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:gravity="center"
        android:background="@drawable/textbox_round"
        />

    <DatePicker
        android:id="@+id/date_picker_new_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/due_date_chosen"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:background="@color/Alabaster"
        />

    <Button
        android:id="@+id/new_card_set_duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set date"
        android:background="@drawable/button_rounded_corner_attach"
        android:layout_below="@id/date_picker_new_card"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>