<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="11dp"
        android:layout_marginVertical="7dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/personal_card_view"
        >

    <RelativeLayout
        android:id="@+id/relative_layout_personal_card"
        android:background="@drawable/personal_post_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="5dp"
        >
        <LinearLayout
            android:id="@+id/top_bar_linear_layout"
            android:background="@drawable/personal_post_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:layout_weight="1"
                android:id="@+id/personal_post_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-30-2020"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget : 1000 - 200"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="3dp"
                android:gravity="right"
                android:id="@+id/personal_post_budget_text_view">

            </TextView>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_image_personal_card"
            android:layout_below="@id/top_bar_linear_layout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_launcher_background"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/start_chat_button"
            android:background="@drawable/post_card_rectangle_round"
            android:text="this is the description for the card"
            android:layout_below="@id/top_bar_linear_layout"
            android:layout_toRightOf="@id/user_image_personal_card"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:elevation="5dp"
            android:padding="20dp"
            android:id="@+id/personal_card_text_view"/>
        <TextView
            android:layout_toLeftOf="@id/personal_card_text_view"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_name_personal_card"
            android:layout_below="@id/user_image_personal_card"
            android:text="Bader baswaid"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name_personal_card"
            android:text="Bsc in computer science"
            android:layout_toLeftOf="@id/personal_card_text_view"
            android:id="@+id/bio_personal_card"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:padding="5dp"
            android:layout_below="@+id/bio_personal_card"
            android:id="@+id/properties_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/male_image_view_apartment"
                android:src="@drawable/ic_icon_ionic_ios_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:background="@drawable/circle_white_button_small"
                android:elevation="3dp"
                android:padding="5dp"
                />




            <ImageView
                android:id="@+id/female_image_view_apartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:src="@drawable/ic_icon_ionic_ios_female"

                android:background="@drawable/circle_white_button_small"
                android:elevation="3dp"
                android:padding="5dp"
                />

            <ImageView
                android:id="@+id/pets_allowd_image_view_apartment"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"

                android:src="@drawable/ic_icon_map_pet_store"

                android:background="@drawable/circle_white_button_small"
                android:elevation="1dp"
                android:padding="5dp"/>


            <ImageView
                android:id="@+id/non_smoking_image_view_apartment"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:background="@drawable/circle_white_button_small"
                android:elevation="1dp"
                android:padding="5dp"
                android:src="@drawable/ic_icon_material_smoke_free"

                />

        </LinearLayout>
        <Button

            android:layout_toRightOf="@id/properties_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:padding="7dp"
            android:id="@+id/start_chat_button"
            android:background="@drawable/button_round_corner_purple"
            android:text="send message"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_icon_feather_message_circle_small"
            android:drawablePadding="5dp"
          
            android:layout_below="@id/bio_personal_card"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="7dp"

            />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bio_personal_card"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/start_check_button"
            android:button="@android:color/transparent"

            />



    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>