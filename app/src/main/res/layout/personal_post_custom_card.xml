<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="7dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/personal_card_view"
        >

        <RelativeLayout
            android:id="@+id/relative_layout_personal_card"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/personal_post_relative_layout"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/top_bar_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/personal_post_linear_layout"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/personal_post_date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:text="10-30-2020" />

                <TextView
                    android:id="@+id/personal_post_budget_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Budget : 1000 - 200">

                </TextView>

            </LinearLayout>


            <ImageView
                android:id="@+id/user_image_personal_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_bar_linear_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_launcher_background" />

            <TextView

                android:id="@+id/personal_card_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/start_chat_button"
                android:layout_below="@id/top_bar_linear_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/user_image_personal_card"
                android:background="@drawable/post_card_rectangle_round"
                android:elevation="5dp"
                android:padding="20dp"
                android:text="this is the description for the card" />

            <TextView
                android:id="@+id/user_name_personal_card"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_image_personal_card"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@id/personal_card_text_view"
                android:text="Bader baswaid"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/bio_personal_card"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name_personal_card"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@id/personal_card_text_view"
                android:text="Bsc in computer science" />

            <LinearLayout
                android:id="@+id/properties_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bio_personal_card"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:padding="5dp">


                <ImageView
                    android:id="@+id/male_image_view_apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white_button_small"
                    android:elevation="3dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_icon_ionic_ios_male" />


                <ImageView
                    android:id="@+id/female_image_view_apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white_button_small"
                    android:elevation="3dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_icon_ionic_ios_female" />

                <ImageView
                    android:id="@+id/pets_allowd_image_view_apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white_button_small"
                    android:elevation="1dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_icon_map_pet_store" />


                <ImageView
                    android:id="@+id/non_smoking_image_view_apartment"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:layout_margin="2dp"
                    android:background="@drawable/circle_white_button_small"
                    android:elevation="1dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_icon_material_smoke_free"

                    />

            </LinearLayout>

            <Button

                android:id="@+id/start_chat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio_personal_card"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/properties_linear_layout"
                android:background="@drawable/button_round_corner_purple"
                android:drawableStart="@drawable/ic_icon_feather_message_circle_small"
                android:drawablePadding="5dp"

                android:minHeight="0dp"
                android:padding="7dp"
                android:text="send message"
                android:textColor="@color/white"

                />

            <!--            <androidx.appcompat.widget.AppCompatCheckBox-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_below="@+id/bio_personal_card"-->
            <!--                android:layout_alignParentRight="true"-->
            <!--                android:layout_margin="20dp"-->
            <!--                android:background="@drawable/start_check_button"-->
            <!--                android:button="@android:color/transparent"-->

            <!--                />-->

            <com.like.LikeButton
                android:id="@+id/star_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bio_personal_card"
                android:layout_alignParentRight="true"
                android:layout_marginHorizontal="3dp"
                android:layout_marginVertical="12dp"
                android:layout_toRightOf="@id/start_chat_button"

                app:dots_primary_color="@color/Black"
                app:dots_secondary_color="#F5CB5C"
                app:icon_size="15dp"
                app:icon_type="star"
                app:liked="true" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>