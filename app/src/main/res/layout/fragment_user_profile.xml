<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="50dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/info_relative_layout">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle_white_button"
                android:elevation="3dp"
                android:padding="10dp"
                android:src="@drawable/ic_user_profile_svgrepo_com"></ImageView>

            <TextView
                android:id="@+id/view_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:layout_toEndOf="@+id/profile_image"
                android:text="babaj"
                android:shadowColor="@color/jetBlack"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1.5"
                android:textColor="@color/jetBlack"
                android:textSize="20sp"
                >

            </TextView>

            <TextView
                android:id="@+id/view_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_username"
                android:layout_toRightOf="@id/profile_image"
                android:layout_marginTop="3dp"
                android:text="your bio"
                android:layout_toLeftOf="@+id/post_icon"
                android:lines="1"
                android:textColor="@color/lightGrey"
                android:textSize="12sp"
                >

            </TextView>



            <ImageView
                android:id="@+id/post_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_icon_post"
                android:layout_toLeftOf="@id/number_posts"
                android:layout_marginRight="3dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/number_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:text="100"
                android:textStyle="bold"
                android:textColor="@color/jetBlack"
                android:textSize="15sp"
                android:padding="0dp"


                ></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_icon"
        android:layout_alignStart="@id/post_icon"

        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/jetBlack"
        android:text="Posts"/>


</RelativeLayout>
    <Button
        android:id="@+id/edit_profile_button_my_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:padding="10dp"
        android:layout_below="@+id/info_relative_layout"
        android:background="@drawable/edit_profile_button"
        android:text="edit profile"
        android:textSize="12sp"

        android:textColor="@color/jetBlack"

        android:elevation="5dp">

    </Button>





    <TextView
        android:id="@+id/posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_profile_button_my_profile"
     android:layout_margin="5dp"
        android:text="My Posts"
        android:textColor="@color/jetBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:layout_below="@id/posts"
        android:id="@+id/tab_layout_user_profile"
        android:layout_width="match_parent"
        android:background="@drawable/tablayout_round"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:tabIndicatorGravity="stretch"
        app:tabIndicatorColor="@color/Alabaster"
        >

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_button_apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="apartment"
            />


        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_button_personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="personal"
            />


    </com.google.android.material.tabs.TabLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_below="@id/tab_layout_user_profile"
        android:layout_alignParentBottom="true"
        android:id="@+id/recycler_view"/>

    </RelativeLayout>



</androidx.core.widget.NestedScrollView>