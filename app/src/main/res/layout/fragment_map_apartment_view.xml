<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/apartment_layout_map"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/apartment_map_view_background"
        >

    <ImageView
        android:id="@+id/apartment_image_map_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="100dp"
        android:maxWidth="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@id/description_text_view_map_view"
        android:layout_marginRight="5dp"


        />
    <TextView
        android:id="@+id/price_text_view_map_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/apartment_image_map_view"
        android:text="1000 RM"
        android:fontFamily="@font/amiko"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:textColor="@color/jetBlack"
        />
    <TextView
        android:id="@+id/description_text_view_map_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_text_view_map_view"
        android:layout_toRightOf="@id/apartment_image_map_view"
        android:text="rsbhjfnzmdjiefhuabsnkaeijfubhsvd kijnjdfl mkisnzfjkl svmaeklindjkf deidnvjkz fiodn"
        android:paddingBottom="20dp"
        android:paddingRight="10dp"
        android:lines="3"
        />


        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/favorite_check_box_apartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@android:color/transparent"
            android:background="@drawable/start_check_button"
            android:outlineProvider="background"
            android:elevation="3dp"

            />


    </RelativeLayout>


</RelativeLayout>